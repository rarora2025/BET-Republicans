{
  "name": "bet-endorsement-website",
  "version": "1.0.0",
  "description": "Dynamic BET Republican Team Endorsement Website",
  "main": "server.js",
  "homepage": "https://rarora2025.github.io/BET-Republicans",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build-css && npm run build-js",
    "build-css": "tailwindcss -i ./src/input.css -o ./public/styles.css --watch",
    "build-js": "webpack --mode development --watch",
    "deploy": "npm run build-gh-pages",
    "build-gh-pages": "mkdir -p dist && cp -r public/* dist/ && cp README-GITHUB-PAGES.md dist/README.md"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.3.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "keywords": ["bet", "endorsement", "republican", "greenwich", "github-pages"],
  "author": "BET Republican Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rarora2025/BET-Republicans.git"
  }
}
